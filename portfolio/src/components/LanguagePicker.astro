---
// src/components/LanguagePicker.astro
import { languages } from '../i18n/ui';
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const currentLang = Astro.currentLocale || 'es';
const currentPath = Astro.url.pathname;

// L칩gica para traducir rutas (mismo c칩digo que ten칤amos antes)
const routeTranslations: Record<string, Record<string, string>> = {
  es: { 'sobre-mi': 'about-me', 'contacto': 'contact' },
  en: { 'about-me': 'sobre-mi', 'contact': 'contacto' }
};

function getLocalizedPath(targetLang: string) {
  const langPrefix = `/${currentLang}`;
  if (currentPath === langPrefix || currentPath === `${langPrefix}/`) {
    return `/${targetLang}/`;
  }
  let slug = currentPath.replace(`/${currentLang}/`, '').replace(/\/$/, '');
  const translatedSlug = routeTranslations[currentLang]?.[slug];
  if (translatedSlug) return `/${targetLang}/${translatedSlug}`;
  return `/${targetLang}/${slug}`;
}

const langLabels = {
    es: { label: 'Espa침ol', flag: '游쀯릖' },
    en: { label: 'English', flag: '游쥟릖' },
};
---

<div class="relative language-picker-component text-left inline-block">
    
    <button 
        type="button" 
        class="lang-btn inline-flex items-center justify-center w-full gap-2 px-3 py-2 text-sm font-medium text-slate-700 bg-white dark:bg-gray-800 dark:text-gray-200 border border-slate-200 dark:border-gray-700 rounded-lg shadow-sm hover:bg-slate-50 dark:hover:bg-gray-700 focus:outline-none transition-all"
        aria-expanded="false" 
        aria-haspopup="true"
    >
        <span class="text-lg">{langLabels[currentLang as keyof typeof langLabels].flag}</span>
        <span class="uppercase">{currentLang}</span>
        <svg class="w-4 h-4 ml-1 -mr-1 text-slate-500 transition-transform duration-200 lang-chevron" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
    </button>

    <div 
        class="lang-menu hidden absolute right-0 z-50 mt-2 w-40 origin-top-right rounded-xl bg-white dark:bg-gray-900 shadow-xl ring-1 ring-black ring-opacity-5 focus:outline-none border border-slate-100 dark:border-gray-800 transform transition-all duration-200 opacity-0 scale-95"
        role="menu" 
    >
        <div class="py-1">
            {Object.entries(languages).map(([lang, label]) => (
                <a 
                    href={getLocalizedPath(lang)} 
                    class={`
                        group flex items-center px-4 py-3 text-sm transition-colors
                        ${currentLang === lang 
                            ? 'bg-blue-50 text-blue-700 dark:bg-blue-900/20 dark:text-blue-400 font-semibold' 
                            : 'text-slate-700 dark:text-gray-300 hover:bg-slate-50 dark:hover:bg-gray-800'
                        }
                    `}
                >
                    <span class="mr-3 text-lg">{langLabels[lang as keyof typeof langLabels].flag}</span>
                    {label}
                </a>
            ))}
        </div>
    </div>
</div>

<script>
    // Buscamos TODOS los componentes de idioma en la p치gina (escritorio y m칩vil)
    const pickers = document.querySelectorAll('.language-picker-component');

    pickers.forEach(picker => {
        const button = picker.querySelector('.lang-btn');
        const menu = picker.querySelector('.lang-menu');
        const chevron = picker.querySelector('.lang-chevron');

        if (button && menu && chevron) {
            button.addEventListener('click', (e) => {
                e.stopPropagation();
                // Cerramos otros men칰s abiertos por seguridad
                document.querySelectorAll('.lang-menu').forEach(m => {
                    if (m !== menu) m.classList.add('hidden', 'opacity-0', 'scale-95');
                });

                const isExpanded = button.getAttribute('aria-expanded') === 'true';
                button.setAttribute('aria-expanded', (!isExpanded).toString());
                menu.classList.toggle('hidden');
                
                if (!isExpanded) {
                    // Abrir
                    setTimeout(() => {
                        menu.classList.remove('opacity-0', 'scale-95');
                        menu.classList.add('opacity-100', 'scale-100');
                        chevron.classList.add('rotate-180');
                    }, 10);
                } else {
                    // Cerrar
                    menu.classList.remove('opacity-100', 'scale-100');
                    menu.classList.add('opacity-0', 'scale-95');
                    chevron.classList.remove('rotate-180');
                    setTimeout(() => menu.classList.add('hidden'), 100);
                }
            });
        }
    });

    // Cerrar al hacer clic fuera
    document.addEventListener('click', () => {
        document.querySelectorAll('.lang-menu').forEach(menu => {
            menu.classList.add('hidden', 'opacity-0', 'scale-95');
        });
        document.querySelectorAll('.lang-chevron').forEach(chevron => {
            chevron.classList.remove('rotate-180');
        });
    });
</script>
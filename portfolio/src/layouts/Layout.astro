---
// src/layouts/Layout.astro
import '../styles/global.css';
import ThemeToggle from '../components/ThemeToggle.astro';
import LanguagePicker from '../components/LanguagePicker.astro'; // Importamos el selector
import { useTranslations } from '../i18n/ui';

interface Props {
    title: string;
    description?: string;
}

// 1. Detectamos el idioma actual
const lang = Astro.currentLocale || 'es'; 
const t = useTranslations(lang as "es" | "en");

const { title, description = "Portfolio de desarrollador" } = Astro.props;

// 2. Lógica de rutas para los enlaces (Define aquí los nombres de tus archivos en inglés)
const homeUrl = `/${lang}`;
const projectsUrl = `/${lang}/#proyectos`;
const aboutUrl = lang === 'es' ? '/es/sobre-mi' : '/en/about-me'; // Asegúrate de llamar al archivo 'about-me.astro' en la carpeta 'en'
const contactUrl = lang === 'es' ? '/es/contacto' : '/en/contact'; // Asegúrate de llamar al archivo 'contact.astro' en la carpeta 'en'
---

<!doctype html>
<html lang={lang} class="scroll-smooth">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content={description} />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <title>{title}</title>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&display=swap" rel="stylesheet">

        <script is:inline>
            if (
                localStorage.theme === 'dark' ||
                (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)
            ) {
                document.documentElement.classList.add('dark');
            } else {
                document.documentElement.classList.remove('dark');
            }
        </script>
    </head>
    
    <body class="bg-slate-50 dark:bg-gray-950 text-slate-900 dark:text-gray-100 font-['Inter'] antialiased transition-colors duration-300">
        
        <header class="fixed top-0 w-full z-50 bg-white/90 dark:bg-gray-950/90 backdrop-blur-md border-b border-slate-200 dark:border-gray-800 transition-colors duration-300 shadow-sm">
            <nav class="container mx-auto px-6 py-4 flex justify-between items-center">
                <a href={homeUrl} class="text-xl font-bold bg-gradient-to-r from-blue-600 to-emerald-600 dark:from-blue-400 dark:to-emerald-400 text-transparent bg-clip-text">
                    Cdev76
                </a>
                
                <div class="flex items-center gap-6">
                    <ul class="flex gap-6 text-sm font-medium text-slate-600 dark:text-gray-300">
                        <li>
                            <a href={projectsUrl} class="hover:text-blue-600 dark:hover:text-blue-400 transition">
                                {t('nav.projects')}
                            </a>
                        </li>
                        <li>
                            <a href={aboutUrl} class="hover:text-blue-600 dark:hover:text-blue-400 transition">
                                {t('nav.about')}
                            </a>
                        </li>
                        <li>
                            <a href={contactUrl} class="hover:text-blue-600 dark:hover:text-blue-400 transition">
                                {t('nav.contact')}
                            </a>
                        </li>
                    </ul>
                    
                    <div class="flex items-center gap-3 border-l border-slate-200 dark:border-gray-700 pl-4">
                        <LanguagePicker />
                        <ThemeToggle />
                    </div>
                </div>
            </nav>
        </header>

        <main class="pt-20">
            <slot />
        </main>

        <footer class="py-10 mt-20 border-t border-slate-200 dark:border-gray-800 text-center text-slate-500 dark:text-gray-400 text-sm">
            <div class="container mx-auto px-6">
                <p>© {new Date().getFullYear()} Cdev76. {t('footer.rights')}</p>
            </div>
        </footer>

    </body>
</html>